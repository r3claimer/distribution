. /etc/profile

# Get GPU overclock state
GPU_OC_STATE=$(get_setting "enable.gpu-overlock")
if [ ! -n "${GPU_OC_STATE}" ]; then
  GPU_OC_STATE="0"
  set_setting "enable.gpu-overlock" "0"
fi

# Set GPU OC state
/usr/lib/autostart/quirks/platforms/SD865/bin/gpu_overclock ${GPU_OC_STATE}
